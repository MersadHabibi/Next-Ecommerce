generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  price       String
  description String
  colors      String[]
  sizes       Int[]
  quantity    Int
  mainImage   String
  images      String[]
  gender      String
}

model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  image String
}
